                    var WalkLength = $('<td></td>').html(data[z * 7 + 3] + " Minutes");
                    var Price = $('<td></td>').html("₺ " + data[z * 7 + 4]).show(300);
                    var WalkRate = $('<td></td>').html("★ " + data[z * 7 + 5]).show(300);
                    var WalkComment = $('<td></td>').html(data[z * 7 + 6]).show(300);
                    $('.WhereWeBegin').last().append(CustomerName);
                    $('.WhereWeBegin').last().append(PetName);
                    $('.WhereWeBegin').last().append(WalkDate);
                    $('.WhereWeBegin').last().append(WalkLength);
                    $('.WhereWeBegin').last().append(Price);
