            data: JSON.stringify(),
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    $('#achievements').append('<li>');
                    var AchievementName = $(' <img></img>').attr("src", "../Content/images/Achievements/" + data[i] + ".png").attr("style", "width:100px; height:100px;");
                    $('#achievements').append(AchievementName);
                    var AchievementText;
                    if (data[i] == 1) {
                        AchievementText = "  My First Walk!"
                    }
                    else if (data[i] == 2) {
                        AchievementText = "  My 10th Walk"
                    }
                    else if (data[i] == 3) {
                        AchievementText = "  Im so good at this!"
                    }
                    else if (data[i] == 4) {
                        AchievementText = "  My first rate!"
                    }
                    else {
                        AchievementText = ""
                    }
                    $('#achievements').append(AchievementText);
                    $('#achievements').append('</li>');
                }
            },
            error: function (data) {
                alert("Data Getirilemedi")
            }
        });//get achievements
        $.ajax({
            type: "POST",
            url: 'GetRating',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                var loopCount = data.length / 7;
                for (var z = 0; z < loopCount; z++) {
                    $('.WhereWeBegin').append($('<tr>'));
                    var CustomerName = $('<td></td>').html(data[z * 7]).show(300);
                    var PetName = $('<td></td>').html(data[z * 7 + 1]).show(300);
